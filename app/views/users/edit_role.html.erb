<%# Tela para admin editar a role de um usuário %>
<div class="min-h-[30vh] w-full max-w-md mx-auto px-4 py-8 flex flex-col gap-8 bg-white rounded-lg shadow-sm">
  <h2 class="text-2xl font-bold mb-6">Alterar permissão de <%= @user.email %></h2>

  <%= form_with(model: @user, url: update_role_user_path(@user), method: :patch, local: true) do |f| %>
    <div class="field mb-4">
      <%= f.label :role, 'Permissão', class: 'block text-sm font-medium text-stone-700' %>
      <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: 'bg-stone-100 px-2 h-8 mt-1 block w-full rounded-md border-stone-300 shadow-sm' %>
    </div>
    <div class="actions">
      <%= f.submit 'Atualizar permissão', class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  <% end %>

  <%= link_to 'Voltar', edit_user_registration_path(@user), class: 'text-indigo-600 hover:text-indigo-800 text-sm font-medium' %>
</div>
