<div id="<%= dom_id article %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= article.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Authors:</strong>
    <%= article.authors %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Abstract:</strong>
    <%= article.abstract %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Doi:</strong>
    <%= article.doi %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Article url:</strong>
    <%= article.article_url %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Keywords:</strong>
    <%= article.keywords %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Language:</strong>
    <%= article.language %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Research theme:</strong>
    <%= article.research_theme %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Publication type:</strong>
    <%= article.publication_type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Main methodology:</strong>
    <%= article.main_methodology %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Bibliographic reference:</strong>
    <%= article.bibliographic_reference %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Institutions:</strong>
    <%= article.institutions %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Data source:</strong>
    <%= article.data_source %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Database citation:</strong>
    <%= article.database_citation %>
  </div>
  <div>
    <strong class="block font-medium mb-1">States:</strong>
    <%= article.states %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Spatial analysis:</strong>
    <%= article.spatial_analysis? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Laboratory methods:</strong>
    <%= article.laboratory_methods %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Datings:</strong>
    <%= article.datings %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Edition:</strong>
    <%= article.edition_id %>
  </div>
</div>
