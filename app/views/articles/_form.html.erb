<%= form_with(model: article, class: "contents") do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul class="list-disc ml-6">
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label "Título" %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:title].none?, "border-red-400 focus:outline-red-600": article.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Autores" %>
    <%= form.text_area :authors, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:authors].none?, "border-red-400 focus:outline-red-600": article.errors[:authors].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Resumo" %>
    <%= form.text_area :abstract, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:abstract].none?, "border-red-400 focus:outline-red-600": article.errors[:abstract].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Palavras-chave" %>
    <div class="flex flex-col gap-2 mb-2" data-controller="keywords">
      <div class="flex flex-wrap gap-2 mb-2">
        <% @article.keywords.each_with_index do |keyword, idx| %>
          <span class="inline-flex items-center bg-blue-100 text-blue-800 px-2 py-1 rounded" data-keywords-target="keywordTag" data-keywords-index="<%= keyword.id %>">
            <%= keyword.name %>
            <button
              type="button"
              class="ml-2 text-red-500 hover:text-red-700 font-bold cursor-pointer"
              data-action="click->keywords#removeKeyword"
              data-keywords-index="<%= keyword.id %>"
            >
              &times;
            </button>
            <input type="hidden" name="article[keyword_ids][]" value="<%= keyword.id %>">
          </span>
        <% end %>
      </div>

      <div>
        <input
          type="text"
          name="new_keyword"
          placeholder="Adicionar palavra-chave"
          class="border rounded px-2 py-1 w-48"
          data-action="input->keywords#autocomplete keydown->keywords#handleKeydown"
          data-keywords-target="input"
          autocomplete="off"
        />
        <ul class="absolute bg-white border rounded shadow mt-1 z-10 w-48 hidden" data-keywords-target="suggestions"></ul>
        <button
          type="button"
          class="ml-2 bg-blue-500 text-white px-2 py-1 rounded"
        >
          Adicionar
        </button>
      </div>

    </div>
  </div>

  <div class="my-5">
    <%= form.label "DOI" %>
    <%= form.text_field :doi, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:doi].none?, "border-red-400 focus:outline-red-600": article.errors[:doi].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "URL do artigo" %>
    <%= form.text_field :article_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:article_url].none?, "border-red-400 focus:outline-red-600": article.errors[:article_url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Idioma da publicação" %>
    <%= form.text_field :language, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:language].none?, "border-red-400 focus:outline-red-600": article.errors[:language].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Tema da pesquisa" %>
    <%= form.text_field :research_theme, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:research_theme].none?, "border-red-400 focus:outline-red-600": article.errors[:research_theme].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Tipo de publicação" %>
    <%= form.text_field :publication_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:publication_type].none?, "border-red-400 focus:outline-red-600": article.errors[:publication_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Metodologia principal" %>
    <%= form.text_field :main_methodology, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:main_methodology].none?, "border-red-400 focus:outline-red-600": article.errors[:main_methodology].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Instituições" %>
    <%= form.text_area :institutions, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:institutions].none?, "border-red-400 focus:outline-red-600": article.errors[:institutions].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Fonte dos dados" %>
    <%= form.text_field :data_source, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:data_source].none?, "border-red-400 focus:outline-red-600": article.errors[:data_source].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Citação a banco de dados" %>
    <%= form.text_area :database_citation, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:database_citation].none?, "border-red-400 focus:outline-red-600": article.errors[:database_citation].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Delimitação estadual da pesquisa" %>
    <%= form.text_field :states, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:states].none?, "border-red-400 focus:outline-red-600": article.errors[:states].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label "Analise espacial" %>
    <%= form.check_box :spatial_analysis, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": article.errors[:spatial_analysis].none?, "border-red-400 focus:outline-red-600": article.errors[:spatial_analysis].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "métodos de laboratório" %>
    <%= form.text_area :laboratory_methods, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:laboratory_methods].none?, "border-red-400 focus:outline-red-600": article.errors[:laboratory_methods].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label "Datações" %>
    <%= form.text_area :datings, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": article.errors[:datings].none?, "border-red-400 focus:outline-red-600": article.errors[:datings].any?}] %>
  </div>

  <% if edition_id.present? %>
    <div class="field my-5">
      <%= form.label "Edição" %>
      <%= form.hidden_field :edition_id, value: edition_id %>
      <%= Edition.find(edition_id).volume_with_journal %>
    </div>
  <% else %>
    <div class="field my-5">
      <%= form.label "Edição" %>
      <%= form.collection_select :edition_id, Edition.all.order('volume'), :id, :volume_with_journal, {prompt: "Selecione a Edição"}, class: "form-control" %>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label "Referências bibliográficas" %>
    <div class="flex flex-col gap-2 mb-2" data-controller="bibliographic-references">
      <div class="flex flex-wrap gap-2 mb-2">
        <% @article.bibliographic_references.each do |reference| %>
          <span class="inline-flex flex-col items-start bg-green-100 text-green-800 px-2 py-1 rounded min-w-[300px]" data-bibliographic-references-target="referenceTag" data-bibliographic-references-index="<%= reference.id %>">
            <span class="font-semibold"><%= reference.title %></span>
            <span><strong>Autores:</strong> <%= reference.authors %></span>
            <span><strong>Ano:</strong> <%= reference.year %></span>
            <span><strong>Editora:</strong> <%= reference.publisher %></span>
            <span><strong>Local:</strong> <%= reference.publication_location %></span>
            <span><strong>DOI:</strong> <%= reference.doi %></span>
            <span><strong>Idioma:</strong> <%= reference.language %></span>
            <span><strong>Tipo:</strong> <%= reference.reference_type %></span>
            <button
              type="button"
              class="ml-2 text-red-500 hover:text-red-700 font-bold cursor-pointer self-end"
              data-action="click->bibliographic-references#removeReference"
              data-bibliographic-references-index="<%= reference.id %>"
            >
              &times;
            </button>
            <input type="hidden" name="article[bibliographic_reference_ids][]" value="<%= reference.id %>" />
          </span>
        <% end %>
      </div>
      <div class="border rounded p-3 bg-gray-50 mt-2">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
          <input type="text" name="new_bibliographic_reference[title]" placeholder="Título" class="border rounded px-2 py-1 w-full" />
          <input type="text" name="new_bibliographic_reference[authors]" placeholder="Autores" class="border rounded px-2 py-1 w-full" />
          <input type="number" name="new_bibliographic_reference[year]" placeholder="Ano" class="border rounded px-2 py-1 w-full" />
          <input type="text" name="new_bibliographic_reference[publisher]" placeholder="Editora" class="border rounded px-2 py-1 w-full" />
          <input type="text" name="new_bibliographic_reference[publication_location]" placeholder="Local de publicação" class="border rounded px-2 py-1 w-full" />
          <input type="text" name="new_bibliographic_reference[doi]" placeholder="DOI" class="border rounded px-2 py-1 w-full" />
          <input type="text" name="new_bibliographic_reference[language]" placeholder="Idioma" class="border rounded px-2 py-1 w-full" />
          <input type="text" name="new_bibliographic_reference[reference_type]" placeholder="Tipo de referência" class="border rounded px-2 py-1 w-full" />
        </div>
        <button type="button" class="mt-2 bg-green-600 text-white px-3 py-1 rounded" data-action="click->bibliographic-references#addNewReference">Cadastrar nova referência</button>
      </div>
      <div>
        <div>
        <input
          type="text"
          name="new_bibliographic_reference_search"
          placeholder="Buscar referência existente pelo título"
          class="border rounded px-2 py-1 w-48 mt-2"
          data-action="input->bibliographic-references#autocomplete keydown->bibliographic-references#handleKeydown"
          data-bibliographic-references-target="input"
          autocomplete="off"
        />
        <ul class="absolute bg-white border rounded shadow mt-1 z-10 w-96 hidden" data-bibliographic-references-target="suggestions"></ul>
        </div>
      </div>
    </div>
  </div>

  <div class="inline">
    <%= form.submit(article.persisted? ? "Atualizar artigo" : "Criar artigo", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer") %>
  </div>
<% end %>
