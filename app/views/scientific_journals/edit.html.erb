<% content_for :title, "Editing scientific journal" %>

<div class="container">
  <div class="max-w-3xl mx-auto p-6 bg-gray-200 shadow-md rounded-lg">
    <h1 class="text-2xl font-bold mb-6">Editar dados da revista</h1>

    <div class="mb-6">
      <%= render "form", scientific_journal: @scientific_journal %>
    </div>

    <div class="flex flex-col sm:flex-row gap-2">
      <%= link_to "Show this scientific journal", @scientific_journal, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
      <%= link_to "Back to scientific journals", scientific_journals_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
    </div>
  </div>
</div>