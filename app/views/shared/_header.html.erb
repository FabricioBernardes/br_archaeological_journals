<header class="w-full bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-baseline">
      <a href="/">
        <h1 class="text-2xl font-bold">Bibliometria Arqueol√≥gica</h1>
      </a>
      <a href="/scientific_journals" class="ml-4 text-gray-500 hover:text-gray-300 font-semibold">Revistas cientificas</a>
    </div>

    <div>
      <% if user_signed_in? %>
        <p class="text-sm mb-2">Logged in as <%= current_user.email %></p>
      <% end %>
      <div class="flex space-x-4">
        <% if user_signed_in? %>
          <%= link_to 'Edit Profile', edit_user_registration_path, class: "text-gray-500 hover:text-gray-300" %>
          <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-500 hover:text-gray-300" %>
          <%= link_to 'Delete Account', user_registration_path, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700" %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: "text-gray-500 hover:text-gray-300" %>
          <%= link_to 'Register', new_user_registration_path, class: "text-gray-500 hover:text-gray-300" %>
        <% end %>
      </div>
    </div>
  </div>
</header>
