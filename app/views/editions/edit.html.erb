<% content_for :title, "Editing edition" %>

<div class="min-h-[40vh] w-full max-w-3xl mx-auto px-4 py-8 flex flex-col gap-8 bg-white rounded-lg shadow-sm">
  <div class="mb-4 text-sm breadcrumbs w-full">
    <ul class="flex space-x-2">
      <li class="text-gray-500"><%= link_to "Revistas", scientific_journals_path %></li>
      <li>/</li>
      <li class="text-gray-500"><%= link_to @edition.scientific_journal.name, scientific_journal_path(@edition.scientific_journal) %></li>
      <li>/</li>
      <li class="font-semibold">Editar edição</li>
    </ul>
  </div>

  <h1 class="font-bold text-4xl">Editar dados da edição</h1>

  <%= render "form", edition: @edition, scientific_journal_id: params.dig(:edition, :edition_id) %>

  <%= link_to "Show this edition", @edition, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
