<button id="menu-mobile-toggle" aria-label="Abrir menu" aria-expanded="false" aria-controls="menu-mobile-dropdown">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-menu-icon lucide-menu"><path d="M4 12h16"/><path d="M4 18h16"/><path d="M4 6h16"/></svg>
</button>

<div id="menu-mobile-dropdown" class="absolute top-0 left-0 w-[100vw] h-[100vh] bg-white p-4 z-50 hidden">

  <button id="menu-mobile-close" aria-label="Fechar menu" class="absolute top-2 right-2 p-1 rounded hover:bg-stone-100 focus:outline-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
  </button>

  <a href="/scientific_journals" class="block py-2 px-2 text-stone-700 hover:bg-stone-100 rounded">Revistas cientificas</a>
  <div class="flex flex-col gap-2 mt-2">
    <% if user_signed_in? %>
      <%= link_to 'Edit Profile', edit_user_registration_path, class: "block py-2 px-2 text-stone-700 hover:bg-stone-100 rounded" %>
      <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "block py-2 px-2 text-stone-700 hover:bg-stone-100 rounded" %>
    <% else %>
      <%= link_to 'Login', new_user_session_path, class: "block py-2 px-2 text-stone-700 hover:bg-stone-100 rounded" %>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var toggle = document.getElementById('menu-mobile-toggle');
    var menu = document.getElementById('menu-mobile-dropdown');
    var closeBtn = document.getElementById('menu-mobile-close');
    if (toggle && menu) {
      toggle.addEventListener('click', function(e) {
        e.stopPropagation();
        var expanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', !expanded);
        menu.classList.toggle('hidden');
      });
      document.addEventListener('click', function(e) {
        if (!menu.classList.contains('hidden')) {
          if (!menu.contains(e.target) && !toggle.contains(e.target)) {
            menu.classList.add('hidden');
            toggle.setAttribute('aria-expanded', 'false');
          }
        }
      });
      // Bot√£o de fechar
      closeBtn.addEventListener('click', function(e) {
        menu.classList.add('hidden');
        toggle.setAttribute('aria-expanded', 'false');
      });
    }
  });
</script>