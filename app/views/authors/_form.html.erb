<%= form_with(model: author, class: "contents") do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul class="list-disc ml-6">
        <% author.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": author.errors[:name].none?, "border-red-400 focus:outline-red-600": author.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :country_of_origin %>
    <%= form.text_field :country_of_origin, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": author.errors[:country_of_origin].none?, "border-red-400 focus:outline-red-600": author.errors[:country_of_origin].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :institutional_affiliation %>
    <%= form.text_field :institutional_affiliation, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": author.errors[:institutional_affiliation].none?, "border-red-400 focus:outline-red-600": author.errors[:institutional_affiliation].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :specialization_area %>
    <%= form.text_field :specialization_area, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": author.errors[:specialization_area].none?, "border-red-400 focus:outline-red-600": author.errors[:specialization_area].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :academic_background %>
    <%= form.text_area :academic_background, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": author.errors[:academic_background].none?, "border-red-400 focus:outline-red-600": author.errors[:academic_background].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
