<% content_for :title, "Editing scientific journal" %>

<div class="container max-w-7xl mx-auto">
  <div class="min-h-[40vh] w-full mx-auto px-4 py-8 flex flex-col gap-8 bg-white rounded-lg shadow-sm">
    <h1 class="text-2xl font-bold mb-6">Editar dados da revista</h1>

    <div class="mb-4 text-sm breadcrumbs w-full">
      <ul class="flex space-x-2">
        <li class="text-stone-500"><%= link_to "Revistas", scientific_journals_path %></li>
        <li>/</li>
        <li class="font-semibold">Editar revista</li>
      </ul>
    </div>

    <div class="mb-6">
      <%= render "form", scientific_journal: @scientific_journal %>
    </div>

    <div class="flex flex-col sm:flex-row gap-2">
      <%= link_to "Retorna para a revista", @scientific_journal, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-stone-100 hover:bg-stone-50 font-medium" %>
      <%= link_to "Revistas", scientific_journals_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-stone-100 hover:bg-stone-50 font-medium" %>
    </div>
  </div>
</div>