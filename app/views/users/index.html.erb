<%# Lista de usuários para admin editar role %>
<div class="container max-w-3xl mx-auto py-8">
  <h1 class="text-2xl font-bold mb-6">Gerenciar permissões dos usuários</h1>
  <table class="min-w-full bg-white border rounded shadow-sm">
    <thead>
      <tr>
        <th class="px-4 py-2 border-b">Email</th>
        <th class="px-4 py-2 border-b">Permissão</th>
        <th class="px-4 py-2 border-b">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="px-4 py-2 border-b"><%= user.email %></td>
          <td class="px-4 py-2 border-b"><%= user.role.present? ? user.role.titleize : '-' %></td>
          <td class="px-4 py-2 border-b">
            <% unless user == current_user %>
              <%= link_to 'Editar permissão', edit_role_user_path(user), class: 'inline-block px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-500' %>
            <% else %>
              <span class="text-stone-400">(você)</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
